%h1 Listing climate_control_units

%table.table
  %thead
    %tr
      %th Name
      %th Kind
      %th Room
      %th Slot
      %th Actions

  %tbody
    - @climate_control_units.each do |climate_control_unit|
      %tr
        %td= climate_control_unit.name
        %td= climate_control_unit.kind
        %td= climate_control_unit.room
        %td= climate_control_unit.slot
        %td
          .btn-group
            = link_to 'Show', room_climate_control_unit_path(@room, climate_control_unit), class: 'btn btn-primary'
            = link_to 'Edit', edit_room_climate_control_unit_path(@room, climate_control_unit), class: 'btn btn-warning'
            = link_to 'Destroy', room_climate_control_unit_path(@room, climate_control_unit), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Climate control unit', new_room_climate_control_unit_path(@room), class: 'btn btn-success'
