= form_for @data_point do |f|
  - if @data_point.errors.any?
    #error_explanation
      %h2= "#{pluralize(@data_point.errors.count, "error")} prohibited this data_point from being saved:"
      %ul
        - @data_point.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :type
    = f.number_field :type
  .field
    = f.label :value
    = f.text_field :value
  .field
    = f.label :room
    = f.text_field :room
  .field
    = f.label :node
    = f.text_field :node
  .actions
    = f.submit 'Save'
