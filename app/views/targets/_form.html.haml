= form_for [@room, @target] do |f|
  - if @target.errors.any?
    #error_explanation
      %h2= "#{pluralize(@target.errors.count, "error")} prohibited this target from being saved:"
      %ul
        - @target.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :kind
    = f.select :kind, Target.kinds.keys
  .field
    = f.label :value
    = f.text_field :value
  .actions
    = f.submit 'Save', class: 'btn btn-success'
