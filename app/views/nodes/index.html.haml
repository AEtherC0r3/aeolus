%h1 Listing nodes

%table
  %thead
    %tr
      %th Capabilities
      %th Api key
      %th Room
      %th
      %th
      %th

  %tbody
    - @nodes.each do |node|
      %tr
        %td= node.capabilities
        %td= node.api_key
        %td= node.room
        %td= link_to 'Show', node, class: 'btn btn-primary'
        %td= link_to 'Edit', edit_room_node_path(node), class: 'btn btn-warning'
        %td= link_to 'Destroy', node, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Node', new_room_node_path
