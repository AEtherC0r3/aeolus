%h1 Listing nodes

%table.table
  %thead
    %tr
      %th Capabilities
      %th Api key
      %th Room
      %th Actions

  %tbody
    - @nodes.each do |node|
      %tr
        %td= node.capabilities
        %td= node.api_key
        %td= node.room
        %td
          .btn-group
            = link_to 'Show', room_node_path(@room, node), class: 'btn btn-primary'
            = link_to 'Edit', edit_room_node_path(@room, node), class: 'btn btn-warning'
            = link_to 'Destroy', room_node_path(@room, node), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'

%br

= link_to 'New Node', new_room_node_path(@room), class: 'btn btn-success'
