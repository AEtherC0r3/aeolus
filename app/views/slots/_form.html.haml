= form_for [@room, @node, @slot] do |f|
  - if @slot.errors.any?
    #error_explanation
      %h2= "#{pluralize(@slot.errors.count, "error")} prohibited this slot from being saved:"
      %ul
        - @slot.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :kind
    = f.select :kind, Slot.kinds.keys
  .field
    = f.label :climate_control_unit
    = f.text_field :climate_control_unit
  .actions
    = f.submit 'Save', class: 'btn btn-success'
